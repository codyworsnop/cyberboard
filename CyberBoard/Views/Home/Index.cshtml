<link href="~/Content/Site.css" rel="stylesheet" />

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <ul style="list-style:none">
        @foreach (dynamic tweet in Model)
        {
            <li>
                <blockquote class="twitter-tweet">
                    <p lang="en" dir="ltr">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-10"><h4>@tweet.User.Name</h4></div>
                                <div class="col-md-2"><img src="@tweet.User.ProfileImageUrl" alt="Profile Picture" /></div>
                                <div class="col-xs-12"><p>@tweet.Text</p></div>
                            </div>
                        </div>

                </blockquote>
            </li>
        }
    </ul>


</div>